generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id Int @id @default(autoincrement())
  name String 
  description String 
  image String @default("No link for ya")
  likes Int @default(0)
  tags TagsAndPosts[]
}

model Tag {
  id Int @id @default(autoincrement())
  name String @unique
  posts TagsAndPosts[]
}

model TagsAndPosts {
  post Post @relation(fields: [postId], references: [id])
  postId Int
  tag Tag @relation(fields: [tagId], references: [id])
  tagId Int

  @@id([postId, tagId]) // What? Ask this.
}